<!-- SIGN UP FORM -->

<h1>Users#new</h1>
<p>THIS IS GOING TO BE THE NEW USER SIGN UP PAGE</p>

<section class="page">
  <div class="centered-box">
    <h1>New User</h1>

    <!-- <%#= render 'shared/errors' %> -->

    <form action="<%= users_url %>" method="post">
      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <label for="user_email">Email</label>
      <input type="text"
        name="user[email]"
        id="user_email"
        value="">
      <br>

      <label for="user_password">Password</label>
      <input type="password"
        name="user[password]"
        id="user_password"
        value="">
      <br>

      <input type="submit">
    </form>
  </div>
</section>
